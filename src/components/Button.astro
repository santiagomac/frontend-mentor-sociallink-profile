---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<li
  class="bg-grey-700 p-2 rounded-lg font-bold text-white hover:bg-primary hover:text-grey-900 hopver:font-bold"
>
  <a href={href} target="_blank">
    <h3 class="text-center">{title}</h3>
  </a>
</li>
